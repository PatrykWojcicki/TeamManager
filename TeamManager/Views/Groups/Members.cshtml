@model IEnumerable<TeamManager.Models.KarateKid>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista członków</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Imie i nazwisko
            </th>
            <th>
                Nr. telefonu
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.phone)
                </td>
            </tr>
        }
    </tbody>
</table>
