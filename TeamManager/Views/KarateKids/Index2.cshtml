@model IEnumerable<TeamManager.Models.KarateKid>

@{
    ViewData["Title"] = "Index";
}

<h2>Lista Dzieci</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Imie i nazwisko
            </th>
            <th>
                Obecność
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>

                @if (item.PresentList.Where(x => x.ActualDate == DateTime.Today & x.ChildName==item.name &x.ItIsPayment==false).Select(x => x.ActualDate).Contains(DateTime.Today))
                {
                <a asp-controller="KarateKids" asp-action="DeletePresent" class=" btn-lg " asp-route-ID="@item.ID">&#9989</a>

                }
                else
                {
                <a asp-controller="KarateKids" asp-action="AddPresent" class=" btn-lg " asp-route-ID="@item.ID">&#10060</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
